num1 = 42  # variable declaration, number initalized
num2 = 2.3 # variable declaration,  number initalized
boolean = True # variable declaration, boolean initialized
string = 'Hello World' #variable declaration, text initalized
pizza_toppings = ['Pepperoni', 'Sausage', 'Jalepenos', 'Cheese', 'Olives'] # variable declaration, list initialized 
person = {'name': 'John', 'location': 'Salt Lake', 'age': 37, 'is_balding': False} #variable declaration, dictionary initialized
fruit = ('blueberry', 'strawberry', 'banana')  # variable declaration, tuble initalized
print(type(fruit)) #type check, print to console
print(pizza_toppings[1]) #Access value
pizza_toppings.append('Mushrooms') # list, Add value
print(person['name'])  #Access value, print
person['name'] = 'George'  #change value
person['eye_color'] = 'blue' #dictionary, change value
print(fruit[2]) #print to console, tuble Access value

if num1 > 45:  #conditional if/else, print to console
    print("It's greater")
else:
    print("It's lower")

if len(string) < 5: #conditional if, print to console
    print("It's a short word!") 
elif len(string) > 15: #conditional if/else, print to console
    print("It's a long word!")
else:
    print("Just right!")

for x in range(5): #for loop, print to console
    print(x)
for x in range(2,5): #for loop, print to console
    print(x)
for x in range(2,10,3): #for loop, print to console
    print(x)
x = 0
while(x < 5): #while loop, print to console
    print(x)
    x += 1

pizza_toppings.pop() #delete value at the end, list
pizza_toppings.pop(1) #delete value at the end, list

print(person)  #print to console
person.pop('eye_color') #delete value, dictionary, print to console
print(person)

for topping in pizza_toppings:  #for loop, dictionary
    if topping == 'Pepperoni':  #conditional if, evaluation
        continue
    print('After 1st if statement')
    if topping == 'Olives':  #conditional if, evaluation
        break

def print_hello_ten_times():  #function declaration
    for num in range(10):   #for loop, print to console
        print('Hello')

print_hello_ten_times()

def print_hello_x_times(x):  #function declaration
    for num in range(x):  #for loop, print to console
        print('Hello')

print_hello_x_times(4)

def print_hello_x_or_ten_times(x = 10): #function declaration
    for num in range(x):  #for loop, print to console
        print('Hello')


print_hello_x_or_ten_times() #function call 
print_hello_x_or_ten_times(4) # function call

